@model FossLock.Web.ViewModels.ProductViewModel
@using System.Web.Mvc.Html
@using System.Web.Mvc
@using FossLock.Core
@using System.Linq

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h3>Product</h3>
        <hr />
        @Html.ValidationSummary(true)

        <div>
            <h4>Basics</h4>
            <div>
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div>
                @Html.LabelFor(model => model.ReleaseDate)
                @Html.EditorFor(model => model.ReleaseDate)
                @Html.ValidationMessageFor(model => model.ReleaseDate)
            </div>
            <div>
                @Html.LabelFor(model => model.VersioningStyle)
                @Html.DropDownListFor(model => model.VersioningStyle, Model.AllVersioningStyles)
                @Html.ValidationMessageFor(model => model.VersioningStyle)
            </div>
            <div>
                @Html.LabelFor(model => model.Notes)
                @Html.EditorFor(model => model.Notes)
                @Html.ValidationMessageFor(model => model.Notes)
            </div>
        </div>

        <div>
            <h4>License/Security</h4>
        </div>
    </div>

    <input type="submit" value="Create" />

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
